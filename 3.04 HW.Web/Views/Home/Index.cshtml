@using _3._04_HW.Data
@model SimchaViewModel


<div class="header">
    <h1 class="text-white">Simchas</h1>
</div>
<div class="row header">
    <div class="col-md-4">
        <button class="btn btn-danger" id="new-simcha">New Simcha</button>
    </div>
</div>
<div class="table-responsive mt-3">
    <table class="table table-striped table-bordered table-dark">
        <tr>
            <th>Contributions</th>
            <th>Simcha's Name</th>
            <th>Contributor Count</th>
            <th>Total</th>
            <th>Date</th>
        </tr>
        @foreach (Simcha simcha in Model.Simchas)
        {
            <tr>
                <td><a href="/home/contributions?id=@simcha.Id" class="btn btn-primary">Contributions</a></td>
                <td>@simcha.SimchaName</td>
                <td>@simcha.TotalContributors/@Model.TotalContributorCount</td>
                <td>@simcha.TotalForSimcha.ToString("C")</td>
                <td>@simcha.Date.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>

<div class="modal fade new-simcha" tabindex="1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/home/newSimcha">
                    <div class="form-group">
                        <label class="form-label">Simcha Name</label>
                        <input class="form-control" name="SimchaName" placeholder="Simcha Name" type="text" />
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="date" class="form-control" id="datepicker" />
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary cancel" type="button" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                    </form>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/new-simcha-modal.js"></script>
    }
</div>

